#include <iostream>
using namespace std;

double x(double D, double x_prev, double eps) {
    double x_next = x_prev * (2.0 - D * x_prev);
    if (abs(x_next - x_prev) < eps) {
        return x_next;
    }

    return x(D, x_next, eps);
}

int main() {
    double N = 22.0;
    double D = 2.0;
    double eps = 1e-8;

    double result = N * x(D, eps, 0.5);
    cout << result << endl;
}
