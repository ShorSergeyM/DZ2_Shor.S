#include <iostream>
using namespace std;

long double pow(double num, int power) {
    if (power == 0) return 1.0;
    return num * pow(num, power - 1);
}

long long factorial(int num) {
    if (num == 0) return 1;
    return num * factorial(num - 1);
}

long double e(long double x, long double eps, int n = 0) {
    long double result = pow(x, n) / static_cast<double>(factorial(n));
    if (abs(result) < eps) return result;
    return result + e(x, eps, n + 1);
}

long double cosx(long double x, long double eps, int n = 0) {
    long double result = pow(-1, n) * pow(x, 2 * n) / factorial(2 * n);
    if (abs(result) < eps) return result;
    return result + cosx(x, eps, n + 1);
}

long double ln_1_plus_x(long double x, long double eps, int n = 1) {
    long double result = pow(-1, n + 1) * pow(x, n) / n;
    if (abs(result) < eps) return result;
    return result + ln_1_plus_x(x, eps, n + 1);
}

int main() {
    cout << e(1, 0.00001) << endl;
    cout << cosx(1, 0.00001) << endl;
    cout << ln_1_plus_x(0.5, 0.00001) << endl;
    return 0;
}
